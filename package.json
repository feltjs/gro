{
  "name": "@feltcoop/gro",
  "version": "0.28.1",
  "description": "opinionated tools for web development",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "gro": "./dist/cli/gro.js"
  },
  "license": "MIT",
  "homepage": "https://github.com/feltcoop/gro#readme",
  "scripts": {
    "start": "gro",
    "test": "gro test",
    "bootstrap": "rm -rf .gro dist && esbuild src/**/*.ts src/*.ts --outdir=dist; npm link",
    "dev": "clear && npm run bootstrap && gro dev",
    "build": "clear && npm run bootstrap && gro build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/feltcoop/gro.git"
  },
  "bugs": {
    "url": "https://github.com/feltcoop/gro/issues"
  },
  "keywords": [
    "web",
    "tools",
    "tasks",
    "bundlers",
    "codegen",
    "svelte",
    "typescript"
  ],
  "author": {
    "name": "Felt.coop",
    "email": "team@felt.social",
    "url": "https://felt.social"
  },
  "files": [
    "dist",
    "src",
    "changelog.md",
    "contributing.md"
  ],
  "engines": {
    "node": ">=14.16.0"
  },
  "dependencies": {
    "@feltcoop/felt": "^0.2.2",
    "@rollup/plugin-commonjs": "^18.0.0",
    "@rollup/plugin-node-resolve": "^11.2.1",
    "@rollup/pluginutils": "^4.1.0",
    "cheap-watch": "^1.0.3",
    "es-module-lexer": "^0.4.1",
    "esbuild": "^0.9.3",
    "esinstall": "1.0.5",
    "fs-extra": "^10.0.0",
    "mri": "^1.1.6",
    "path-browserify": "^1.0.1",
    "prettier": "^2.2.1",
    "prettier-plugin-svelte": "^2.2.0",
    "rollup": "^2.37.1",
    "source-map-support": "^0.5.19",
    "sourcemap-codec": "^1.4.8",
    "strict-event-emitter-types": "^2.0.0",
    "svelte": "^3.37.0",
    "svelte-preprocess-esbuild": "^2.0.0",
    "terser": "^5.6.1",
    "tslib": "^2.1.0",
    "typescript": "^4.3.2",
    "uvu": "^0.5.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.11",
    "@types/node": "^15.12.2",
    "@types/prettier": "^2.3.0",
    "@types/source-map-support": "^0.5.3"
  },
  "prettier": {
    "useTabs": true,
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": false,
    "svelteSortOrder": "options-scripts-markup-styles",
    "svelteBracketNewLine": true,
    "overrides": [
      {
        "files": "package.json",
        "options": {
          "useTabs": false
        }
      }
    ]
  }
}
