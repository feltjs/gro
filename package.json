{
  "name": "@feltcoop/gro",
  "version": "0.45.1",
  "description": "opinionated tools for web development",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "gro": "./dist/cli/gro.js"
  },
  "license": "MIT",
  "homepage": "https://github.com/feltcoop/gro#readme",
  "scripts": {
    "start": "gro",
    "test": "gro test",
    "bootstrap": "rm -rf .gro dist && esbuild src/**/*.ts src/*.ts --outdir=dist; npm link",
    "dev": "clear && npm run bootstrap && gro dev",
    "build": "clear && npm run bootstrap && gro build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/feltcoop/gro.git"
  },
  "bugs": {
    "url": "https://github.com/feltcoop/gro/issues"
  },
  "keywords": [
    "web",
    "tools",
    "tasks",
    "bundlers",
    "codegen",
    "svelte",
    "typescript"
  ],
  "author": {
    "name": "Felt.coop",
    "email": "team@felt.social",
    "url": "https://felt.social"
  },
  "files": [
    "dist",
    "src",
    "changelog.md",
    "contributing.md",
    "tsconfig.json"
  ],
  "engines": {
    "node": ">=16.6.0"
  },
  "dependencies": {
    "@rollup/plugin-commonjs": "^20.0.0",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@rollup/pluginutils": "^4.1.1",
    "@types/source-map-support": ">=0.5.4",
    "@types/throttle-debounce": "^2.1.0",
    "cheap-watch": "^1.0.4",
