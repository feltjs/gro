{
  "name": "@feltjs/gro",
  "description": "opinionated webdev toolkit",
  "version": "0.81.2",
  "bin": {
    "gro": "./dist/cli/gro.js"
  },
  "license": "Unlicense",
  "homepage": "https://github.com/feltjs/gro#readme",
  "author": {
    "name": "Felt Co-op",
    "email": "team@felt.social",
    "url": "https://www.felt.social/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/feltjs/gro.git"
  },
  "bugs": {
    "url": "https://github.com/feltjs/gro/issues",
    "email": "team@felt.social"
  },
  "type": "module",
  "engines": {
    "node": ">=20.5.0"
  },
  "scripts": {
    "start": "gro",
    "test": "gro test",
    "build": "rm -rf .gro dist && svelte-package && chmod +x ./dist/cli/gro.js && node ./dist/cli/gro.js build"
  },
  "keywords": [
    "web",
    "tools",
    "tasks",
    "bundlers",
    "codegen",
    "svelte",
    "typescript"
  ],
  "files": [
    "dist",
    "src",
    "changelog.md",
    "tsconfig.json"
  ],
  "dependencies": {
    "@feltjs/util": "^0.9.0",
    "@rollup/pluginutils": "^5.0.2",
    "@ryanatkn/json-schema-to-typescript": "^11.1.5",
    "@types/source-map-support": "^0.5.6",
    "chokidar": "^3.5.3",
    "es-module-lexer": "^1.3.0",
    "esm-env": "^1.0.0",
    "fast-glob": "^3.3.1",
    "fs-extra": "^11.1.1",
    "kleur": "^4.1.5",
    "mri": "^1.2.0",
    "prettier": "^3.0.2",
    "prettier-plugin-svelte": "^3.0.3",
    "source-map-support": "^0.5.21",
    "strict-event-emitter-types": "^2.0.0",
    "tslib": "^2.6.0",
    "zod": "^3.21.4"
  },
  "peerDependencies": {
    "esbuild": "^0.18.0",
    "svelte": ">=4"
  },
  "devDependencies": {
    "@changesets/changelog-git": "^0.1.14",
    "@feltjs/eslint-config": "^0.3.1",
    "@sveltejs/adapter-static": "^2.0.3",
    "@sveltejs/kit": "^1.23.0",
    "@sveltejs/package": "^2.2.1",
    "@types/estree": "^1.0.1",
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^20.3.2",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "esbuild": "^0.18.0",
    "eslint": "^8.48.0",
    "eslint-plugin-svelte": "^2.32.2",
    "svelte": "^4.2.0",
    "svelte-check": "^3.5.0",
    "svelte-preprocess": "^5.0.4",
    "typescript": "^5.1.6",
    "uvu": "^0.5.6"
  },
  "eslintConfig": {
    "root": true,
    "extends": "@feltjs",
    "ignorePatterns": [
      "svelte.config.js",
      "vite.config.js"
    ],
    "rules": {
      "no-console": 1,
      "@typescript-eslint/no-restricted-imports": [
        1,
        {
          "paths": [
            {
              "name": "fs",
              "message": "Please use 'fs-extra' instead, or a local `fs` argument if available.",
              "allowTypeImports": true
            },
            {
              "name": "node:fs",
              "message": "Please use 'fs-extra' instead, or a local `fs` argument if available.",
              "allowTypeImports": true
            }
          ]
        }
      ]
    }
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-svelte"
    ],
    "useTabs": true,
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": false,
    "overrides": [
      {
        "files": "package.json",
        "options": {
          "useTabs": false
        }
      }
    ]
  },
  "exports": {
    ".": {
      "default": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./build.task.ts": {
      "default": "./dist/build.task.js",
      "types": "./dist/build.task.d.ts"
    },
    "./check.task.ts": {
      "default": "./dist/check.task.js",
      "types": "./dist/check.task.d.ts"
    },
    "./clean.task.ts": {
      "default": "./dist/clean.task.js",
      "types": "./dist/clean.task.d.ts"
    },
    "./commit.task.ts": {
      "default": "./dist/commit.task.js",
      "types": "./dist/commit.task.d.ts"
    },
    "./deploy.task.ts": {
      "default": "./dist/deploy.task.js",
      "types": "./dist/deploy.task.d.ts"
    },
    "./dev.task.ts": {
      "default": "./dist/dev.task.js",
      "types": "./dist/dev.task.d.ts"
    },
    "./format.task.ts": {
      "default": "./dist/format.task.js",
      "types": "./dist/format.task.d.ts"
    },
    "./gen.task.ts": {
      "default": "./dist/gen.task.js",
      "types": "./dist/gen.task.d.ts"
    },
    "./help.task.ts": {
      "default": "./dist/help.task.js",
      "types": "./dist/help.task.d.ts"
    },
    "./lint.task.ts": {
      "default": "./dist/lint.task.js",
      "types": "./dist/lint.task.d.ts"
    },
    "./publish.task.ts": {
      "default": "./dist/publish.task.js",
      "types": "./dist/publish.task.d.ts"
    },
    "./test.task.ts": {
      "default": "./dist/test.task.js",
      "types": "./dist/test.task.d.ts"
    },
    "./typecheck.task.ts": {
      "default": "./dist/typecheck.task.js",
      "types": "./dist/typecheck.task.d.ts"
    },
    "./upgrade.task.ts": {
      "default": "./dist/upgrade.task.js",
      "types": "./dist/upgrade.task.d.ts"
    },
    "./cli/gro.js": {
      "default": "./dist/cli/gro.js",
      "types": "./dist/cli/gro.d.ts"
    },
    "./cli/invoke.js": {
      "default": "./dist/cli/invoke.js",
      "types": "./dist/cli/invoke.d.ts"
    },
    "./config/gro.config.default.js": {
      "default": "./dist/config/gro.config.default.js",
      "types": "./dist/config/gro.config.default.d.ts"
    },
    "./gen/helpers/ts.js": {
      "default": "./dist/gen/helpers/ts.js",
      "types": "./dist/gen/helpers/ts.d.ts"
    },
    "./path/inputPath.ts": {
      "default": "./dist/path/inputPath.js",
      "types": "./dist/path/inputPath.d.ts"
    },
    "./path/pathData.ts": {
      "default": "./dist/path/pathData.js",
      "types": "./dist/path/pathData.d.ts"
    },
    "./path/paths.ts": {
      "default": "./dist/path/paths.js",
      "types": "./dist/path/paths.d.ts"
    },
    "./util/sveltekitImportMocks.js": {
      "default": "./dist/util/sveltekitImportMocks.js",
      "types": "./dist/util/sveltekitImportMocks.d.ts"
    }
  }
}
