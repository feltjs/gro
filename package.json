{
  "name": "@feltcoop/gro",
  "version": "0.55.2",
  "description": "opinionated webdev toolkit",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "gro": "./dist/cli/gro.js"
  },
  "license": "MIT",
  "homepage": "https://github.com/feltcoop/gro#readme",
  "scripts": {
    "start": "gro",
    "test": "gro test",
    "bootstrap": "node src/bootstrap.js",
    "dev": "clear && npm run bootstrap && gro dev",
    "build": "clear && npm run bootstrap && gro build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/feltcoop/gro.git"
  },
  "bugs": {
    "url": "https://github.com/feltcoop/gro/issues"
  },
  "keywords": [
    "web",
    "tools",
    "tasks",
    "bundlers",
    "codegen",
    "svelte",
    "typescript"
  ],
  "author": {
    "name": "Felt.coop",
    "email": "team@felt.social",
    "url": "https://felt.social"
  },
  "files": [
    "dist",
    "src",
    "changelog.md",
    "tsconfig.json"
  ],
  "engines": {
    "node": ">=16.6.0"
  },
  "dependencies": {
    "@rollup/pluginutils": "^4.2.1",
    "@ryanatkn/json-schema-to-typescript": "^11.1.2",
    "@types/source-map-support": "^0.5.4",
    "ajv": "^8.10.0",
    "cheap-watch": "^1.0.4",
    "dequal": "^2.0.2",
    "es-module-lexer": "^0.10.5",
    "fs-extra": "^10.1.0",
    "kleur": "^4.1.4",
    "mri": "^1.2.0",
    "prettier": "^2.6.2",
    "prettier-plugin-svelte": "^2.7.0",
    "source-map-support": "^0.5.21",
    "strict-event-emitter-types": "^2.0.0",
    "tslib": "^2.4.0"
  },
  "peerDependencies": {
    "@feltcoop/felt": ">=0.26.0",
    "@sveltejs/kit": ">=1.0.0-next.306",
    "esbuild": ">=0.14.0",
    "svelte": ">=3.44.0",
    "svelte-preprocess-esbuild": ">=2.0.0",
    "typescript": ">=4.6.0",
    "uvu": ">=0.5.3"
  },
  "devDependencies": {
    "@feltcoop/eslint-config": "^0.1.7",
    "@feltcoop/felt": "^0.31.0",
    "@sveltejs/adapter-static": "^1.0.0-next.32",
    "@sveltejs/kit": "^1.0.0-next.345",
    "@types/estree": "^0.0.51",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^16.11.12",
    "@types/prettier": "^2.4.2",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "esbuild": "^0.14.41",
    "eslint": "^8.11.0",
    "eslint-plugin-svelte3": "^3.4.1",
    "svelte": "^3.48.0",
    "svelte-check": "^2.7.1",
    "svelte-preprocess-esbuild": "^2.0.0",
    "typescript": "^4.6.3",
    "uvu": "^0.5.3"
  },
  "eslintConfig": {
    "root": true,
    "extends": "@feltcoop",
    "ignorePatterns": [
      "svelte.config.js"
    ],
    "rules": {
      "@typescript-eslint/no-restricted-imports": [
        1,
        {
          "paths": [
            {
              "name": "fs",
              "message": "Please use 'fs-extra' instead, or a local `fs` argument if available.",
              "allowTypeImports": true
            }
          ]
        }
      ]
    }
  },
  "prettier": {
    "useTabs": true,
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": false,
    "overrides": [
      {
        "files": "package.json",
        "options": {
          "useTabs": false
        }
      }
    ]
  }
}
