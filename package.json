{
  "name": "@feltcoop/gro",
  "version": "0.62.3",
  "description": "opinionated webdev toolkit",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "gro": "./dist/cli/gro.js"
  },
  "license": "Unlicense",
  "homepage": "https://github.com/feltcoop/gro#readme",
  "scripts": {
    "start": "gro",
    "test": "gro test",
    "bootstrap": "node src/bootstrap.js",
    "dev": "clear && npm run bootstrap && gro dev",
    "build": "clear && npm run bootstrap && gro build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/feltcoop/gro.git"
  },
  "bugs": {
    "url": "https://github.com/feltcoop/gro/issues"
  },
  "keywords": [
    "web",
    "tools",
    "tasks",
    "bundlers",
    "codegen",
    "svelte",
    "typescript"
  ],
  "author": {
    "name": "Felt.coop",
    "email": "team@felt.social",
    "url": "https://felt.social"
  },
  "files": [
    "dist",
    "src",
    "changelog.md",
    "tsconfig.json"
  ],
  "engines": {
    "node": ">=18.6.0"
  },
  "dependencies": {
    "@rollup/pluginutils": "^5.0.2",
    "@ryanatkn/json-schema-to-typescript": "^11.1.2",
    "@types/source-map-support": "^0.5.6",
    "cheap-watch": "^1.0.4",
    "dequal": "^2.0.3",
    "es-module-lexer": "^1.1.0",
    "fs-extra": "^10.1.0",
    "kleur": "^4.1.5",
    "mri": "^1.2.0",
    "prettier": "^2.7.1",
    "prettier-plugin-svelte": "^2.8.0",
    "source-map-support": "^0.5.21",
    "strict-event-emitter-types": "^2.0.0",
    "tslib": "^2.4.0",
    "zod": "^3.19.1",
    "zod-to-json-schema": "^3.18.1"
  },
  "peerDependencies": {
    "@feltcoop/felt": ">=0.41.0",
    "esbuild": ">=0.15.0",
    "svelte": ">=3.49.0",
    "svelte-preprocess-esbuild": ">=3.0.1"
  },
  "devDependencies": {
    "@feltcoop/eslint-config": "^0.2.1",
    "@feltcoop/felt": "^0.41.3",
    "@sveltejs/adapter-static": "^1.0.0-next.46",
    "@sveltejs/kit": "^1.0.0-next.524",
    "@types/estree": "^1.0.0",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^18.11.4",
    "@types/prettier": "^2.7.1",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "esbuild": "^0.15.12",
    "eslint": "^8.26.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "svelte": "^3.52.0",
    "svelte-check": "^2.9.2",
    "svelte-preprocess-esbuild": "^3.0.1",
    "typescript": "^4.8.4",
    "uvu": "^0.5.6"
  },
  "eslintConfig": {
    "root": true,
    "extends": "@feltcoop",
    "rules": {
      "@typescript-eslint/no-restricted-imports": [
        1,
        {
          "paths": [
            {
              "name": "fs",
              "message": "Please use 'fs-extra' instead, or a local `fs` argument if available.",
              "allowTypeImports": true
            }
          ]
        }
      ]
    }
  },
  "prettier": {
    "useTabs": true,
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": false,
    "overrides": [
      {
        "files": "package.json",
        "options": {
          "useTabs": false
        }
      }
    ]
  }
}
