{
  "name": "@feltjs/gro",
  "description": "opinionated webdev toolkit",
  "version": "0.80.0",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "gro": "./dist/cli/gro.js"
  },
  "license": "Unlicense",
  "homepage": "https://github.com/feltjs/gro#readme",
  "author": {
    "name": "Felt Co-op",
    "email": "team@felt.social",
    "url": "https://www.felt.social/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/feltjs/gro.git"
  },
  "bugs": {
    "url": "https://github.com/feltjs/gro/issues",
    "email": "team@felt.social"
  },
  "type": "module",
  "engines": {
    "node": ">=18.6.0"
  },
  "scripts": {
    "start": "gro",
    "test": "gro test",
    "bootstrap": "node src/bootstrap.js",
    "dev": "clear && npm run bootstrap && gro dev",
    "build": "clear && npm run bootstrap && gro build"
  },
  "keywords": [
    "web",
    "tools",
    "tasks",
    "bundlers",
    "codegen",
    "svelte",
    "typescript"
  ],
  "files": [
    "dist",
    "src",
    "changelog.md",
    "tsconfig.json"
  ],
  "dependencies": {
    "@feltjs/util": "^0.9.0",
    "@rollup/pluginutils": "^5.0.2",
    "@ryanatkn/json-schema-to-typescript": "^11.1.5",
    "@types/source-map-support": "^0.5.6",
    "chokidar": "^3.5.3",
    "es-module-lexer": "^1.3.0",
    "fast-glob": "^3.3.1",
    "fs-extra": "^11.1.1",
    "kleur": "^4.1.5",
    "mri": "^1.2.0",
    "prettier": "^2.8.8",
    "prettier-plugin-svelte": "^2.10.1",
    "source-map-support": "^0.5.21",
    "strict-event-emitter-types": "^2.0.0",
    "tslib": "^2.6.0",
    "zod": "^3.21.4",
    "zod-to-json-schema": "^3.21.3"
  },
  "peerDependencies": {
    "esbuild": "^0.17.0",
    "svelte": ">=3",
    "svelte-preprocess-esbuild": "^3.0.1"
  },
  "devDependencies": {
    "@feltjs/eslint-config": "^0.3.0",
    "@sveltejs/adapter-static": "^2.0.2",
    "@sveltejs/kit": "^1.22.3",
    "@svitejs/changesets-changelog-github-compact": "^1.1.0",
    "@types/estree": "^1.0.1",
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^20.3.2",
    "@types/prettier": "^2.7.3",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "esbuild": "^0.17.5",
    "eslint": "^8.43.0",
    "eslint-plugin-svelte": "^2.32.2",
    "svelte": "^4.0.5",
    "svelte-check": "^3.4.6",
    "svelte-preprocess-esbuild": "^3.0.1",
    "typescript": "^5.1.6",
    "uvu": "^0.5.6"
  },
  "eslintConfig": {
    "root": true,
    "extends": "@feltjs",
    "ignorePatterns": [
      "svelte.config.js",
      "vite.config.js"
    ],
    "rules": {
      "no-console": 1,
      "@typescript-eslint/no-restricted-imports": [
        1,
        {
          "paths": [
            {
              "name": "fs",
              "message": "Please use 'fs-extra' instead, or a local `fs` argument if available.",
              "allowTypeImports": true
            },
            {
              "name": "node:fs",
              "message": "Please use 'fs-extra' instead, or a local `fs` argument if available.",
              "allowTypeImports": true
            }
          ]
        }
      ]
    }
  },
  "prettier": {
    "useTabs": true,
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": false,
    "overrides": [
      {
        "files": "package.json",
        "options": {
          "useTabs": false
        }
      }
    ]
  }
}
