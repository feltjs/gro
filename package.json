    "@sveltejs/adapter-static": "^1.0.0-next.21",
    "@sveltejs/kit": "^1.0.0-next.192",
    "@types/fs-extra": "^9.0.11",
    "@types/node": "^14.17.6",
    "@types/path-browserify": "^1.0.0",
    "@types/prettier": "^2.3.2"
  },
  "prettier": {
    "useTabs": true,
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": false,
    "svelteBracketNewLine": true,
    "overrides": [
      {
