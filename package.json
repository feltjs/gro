    "mri": "^1.2.0",
    "path-browserify": "^1.0.1",
    "prettier": "^2.4.0",
    "prettier-plugin-svelte": "^2.4.0",
    "rollup": "^2.57.0",
    "source-map-support": ">=0.5.20",
    "sourcemap-codec": "^1.4.8",
    "strict-event-emitter-types": "^2.0.0",
    "svelte": "^3.0.0",
    "svelte-check": "^2.2.6",
    "svelte-preprocess-esbuild": "^2.0.0",
    "terser": "^5.7.2",
    "throttle-debounce": "^3.0.1",
    "tslib": "^2.3.1",
    "typescript": "^4.4.3",
    "uvu": "^0.5.2"
